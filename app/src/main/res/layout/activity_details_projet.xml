<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_projet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="miage.fr.gestionprojet.vues.ActivityDetailsProjet">

    <TextView
        android:text="Ce projet vise à produire ... "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNomProjet"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewDescription" />

    <TextView
        android:text="date de début - date de fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDtProjet"
        android:layout_alignBaseline="@+id/textViewNomProjet"
        android:layout_alignBottom="@+id/textViewNomProjet"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

    <TextView
        android:text="Nom Du Projet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomProjet"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDescription"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/listViewAction" />
</RelativeLayout>